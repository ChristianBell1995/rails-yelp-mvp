<h2><%= @restaurant.name %></h2>
<p> Category: <%= @restaurant.category %></p>
<p> Address: <%= @restaurant.address %></p>
<p> Phone Number: <%= @restaurant.phone_number %></p>

<% @restaurant.reviews.each do |review| %>
  <p> <%= review.content %> </p>
  <p> <%= review.rating %></p>
<% end %>

<p><%= link_to "Not your thing?", restaurants_path, class: 'btn btn-danger' %></p>
<p><%= link_to "Leave a review?", new_restaurant_review_path(@restaurant), class: 'btn btn-danger' %></p>
